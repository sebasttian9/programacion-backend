<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head.ejs') %>   
</head>
<body>
    <main>
        <div style="width: 80%;margin: auto;">
        <h2><%= titulo %> </h2>
        <% if(productos.length>0){ %>
        <div class="table-responsive">
        <table class="table table-dark">
            <thead>
            <tr>
                <th scope="col">Nombre</th>
                <th scope="col">precio</th>
                <th scope="col">img</th>
            </tr>
            </thead>
            <tbody>
                <% productos.forEach(p=>{ %>

                    <tr>
                        <td><%= p.title %></td>
                        <td><%= p.price %></td>
                        <td><img src='<%= p.thumbnail %>' width="50px"></td>
                    </tr>                    

                <% }) %>

    
            </tbody>
        </table>
        </div>
        <% }else{ %>       
    
            <div class="alert alert-danger" role="alert">
            NO SE ENCONTRARON DATOS
            </div>
    
        <% } %>
            <a class="btn btn-primary" href="/" role="button">Ir a formulario</a>
        </div>
    </main>
</body>
</html>


