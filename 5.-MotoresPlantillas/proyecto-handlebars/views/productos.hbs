<main>
    <div style="width: 80%;margin: auto;">
    <h2>Vista productos</h2>
    {{#if productos}}
    <div class="table-responsive">
    <table class="table table-dark">
        <thead>
        <tr>
            {{!-- <th scope="col">#</th> --}}
            <th scope="col">Nombre</th>
            <th scope="col">precio</th>
            <th scope="col">img</th>
        </tr>
        </thead>
        <tbody>
            {{#each productos }}
            <tr>
            <td>{{this.title}}</td>
            <td>{{this.price}}</td>
            <td><img src="{{this.thumbnail}}" width="50px"></td>
            </tr>
            {{/each}}

        </tbody>
    </table>
    </div>
    {{else}}       

        <div class="alert alert-danger" role="alert">
        NO SE ENCONTRARON DATOS
        </div>

    {{/if}}
        <a class="btn btn-primary" href="/" role="button">Ir a formulario</a>
    </div>
</main>